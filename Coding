	System.out.println();
	  // Duration of Time needed to achieve goal
	System.out.print("You just need to exercise ");
	System.out.printf("%.1f", time);
	System.out.println(" minutes more to achieve your goal.");
	System.out.println(name + ", keep it up! ");
	System.out.println();
